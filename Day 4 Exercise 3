column_index = int(position[0]) - 1
row_choice = int(position[1])

if row_choice == 1:
    del row1[column_index]
    row1.insert(column_index,"X")    
elif row_choice == 2:
    del row2[column_index]
    row2.insert(column_index,"X")  
elif row_choice == 3:
    del row3[column_index]
    row3.insert(column_index,"X")  
